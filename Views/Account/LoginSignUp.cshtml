@model TEST2.Models.LoginSignupModel

@{
    ViewData["Title"] = "Login or Signup";
    var activeTab = ViewBag.ActiveTab ?? "";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="left-container">
        <div class="glass-card text-center p-4">
            <h2 class="mb-3">Welcome!</h2>
            <p>Select an option to proceed:</p>
            <div class="d-grid gap-2 mb-3">
                <button class="btn btn-primary btn-lg" id="show-login">Login</button>
                <button class="btn btn-primary btn-lg" id="show-signup">Signup</button>
            </div>

            <!-- Login Form -->
            <div id="login-form" class="form-container mt-4" style="display: @(activeTab == "login" ? "block" : "none");">
                <h2 class="mb-3">Login</h2>
                <form asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <input type="text" name="Username" class="form-control mb-2" placeholder="Username" value="@Model.Login?.Username" required />
                    <input type="password" name="Password" class="form-control mb-2" placeholder="Password" required />
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
            </div>

            <!-- Signup Form -->
            <div id="signup-form" class="form-container mt-4" style="display: @(activeTab == "signup" ? "block" : "none");">
                <h2 class="mb-3">Signup</h2>
                <form asp-controller="Account" asp-action="Signup" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-2">
                        <label for="FirstName">First Name</label>
                        <input type="text" name="FirstName" class="form-control" placeholder="First Name" value="@Model.Signup?.FirstName" required />
                    </div>

                    <div class="form-group mb-2">
                        <label for="LastName">Last Name</label>
                        <input type="text" name="LastName" class="form-control" placeholder="Last Name" value="@Model.Signup?.LastName" required />
                    </div>

                    <div class="form-group mb-2">
                        <label for="Email">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="Email" value="@Model.Signup?.Email" required />
                    </div>

                    <div class="form-group mb-2">
                        <label for="Username">Username</label>
                        <input type="text" name="Username" class="form-control" placeholder="Username" value="@Model.Signup?.Username" required />
                    </div>

                    <div class="form-group mb-2">
                        <label for="Password">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Password" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-2">Signup</button>
                </form>

                <!-- Signup with Google Button -->
                <a asp-action="SignupWithGoogle" asp-controller="Account" class="btn btn-danger w-100 mt-3">
                    <i class="fa fa-google"></i> Signup with Google
                </a>
            </div>

        </div>
    </div>
</div>

<!-- Inline CSS for Styling -->
<style>
    body {
        background: url('/IMAGE/front-view-veggie-burger-with-black-buns-cutting-board-with-copy-space.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        height: 100vh;
    }

    .vh-100 {
        height: 100vh;
    }

    .left-container {
        max-width: 400px;
        width: 100%;
    }

    .food-fact {
        background: rgba(0, 0, 0, 0.85);
        color: #fff;
        font-size: 18px;
        border-radius: 10px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.13);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        color: #fff;
        padding: 20px;
        border-radius: 10px;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.4);
        color: #fff;
    }

    .btn-primary, .btn-danger {
        font-size: 16px;
        font-weight: 600;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: darkgrey;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .text-primary {
        color: #ffa500;
    }
</style>

<!-- JavaScript for Toggling Forms -->
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("show-login").addEventListener("click", function () {
            document.getElementById("login-form").style.display = "block";
            document.getElementById("signup-form").style.display = "none";
        });

        document.getElementById("show-signup").addEventListener("click", function () {
            document.getElementById("signup-form").style.display = "block";
            document.getElementById("login-form").style.display = "none";
        });
    </script>
}
